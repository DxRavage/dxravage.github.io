---
import MainLayout from "../layouts/MainLayout.astro";
---
<MainLayout title="404" description="404 page to display there was an internal error">
  <main
  class="h-screen w-full flex flex-col justify-center items-center"
>
  <h1 class="text-9xl font-extrabold text-primary tracking-widest font-mechsuit">404</h1>
  <div
    class="bg-rose text-secondary px-2 text-sm rounded rotate-12 absolute"
  >
    Page Not Found
  </div>
  <button class="mt-5">
    <a
      class="relative inline-block text-sm font-medium text-rose-400 group active:text-rose focus:outline-none"
    >
      <span
        class="absolute inset-0 transition-transform translate-x-0.5 translate-y-0.5 bg-rose group-hover:translate-y-0 group-hover:translate-x-0"
      ></span>

      <span class="relative block px-8 py-3 border border-current">
        <router-link href="/src/pages/index.astro">Go Home</router-link>
      </span>
    </a>
  </button>
</main>
</MainLayout>

