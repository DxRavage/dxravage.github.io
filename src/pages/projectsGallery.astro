---
import MainLayout from "../layouts/MainLayout.astro";
import Project from "../components/Project.astro";

import wowAstro from './public/wow/wowastro.png';
import aikido from "./public/aikido/aikido4.png";
import gbooks from "./public/gbooks/gbooksSS.png";
---

<MainLayout
  title="Projects | Avila Mariano"
  description="this is an about page to display authors personal projects with a simple showcase of images and content"
>
  <section class="pt-14 mb-44 md:p-14">
    <h2 class="flex justify-center pb-8 text-xl text-center">
      Some of my work
    </h2>
    <h2
      class="flex justify-center pb-4 text-md md:text-xl text-center opacity-35"
    >
      Developer focused in component-based languages, <br /> user experiences and
      responsive design
    </h2>
    <section class="grid grid-cols-1 lg:grid-cols-3 lg:px-28">
      <Project
        title="WoW - Clone"
        description="Clone of World of Warcraft Website using Astro and Tailwind"
        imgSrc={wowAstro}
        link="/projectBlog/wowClone"
      />
      <Project
        title="Book Finder"
        description="Implementation of Google Books API"
        imgSrc={gbooks}
        link="/projectBlog/gBooks"
      />
      <Project
        title="Aikido Mobile App"
        description="Mobile App for Aikido Dojo"
        imgSrc{aikido}
        link="/projectBlog/Aikido"
      />
    </section>
  </section>
</MainLayout>
