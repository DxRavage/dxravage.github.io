---
import MainLayout from "../layouts/MainLayout.astro";
import Plus from "../components/Plus.astro";
import Image from "astro/components/Image.astro";

const { title, tech, descript1, descript2, imgSrc, link} = Astro.props;
---

<MainLayout
  title="Projects | Avila Mariano"
  description="this is an page to display showcase of a specific project trough a brief description and image gallery"
>
  <section
    class="px-4 pt-32 py-8 md:px-64 gap-4 flex flex-col justify-center text-center center"
  >
    <h2 class="text-sm opacity-60">
      {tech}<span class="bold text-rose text-md">-</span>
    </h2>
    <h1 class="font-bold text-2xl md:text-6xl text-rose opacity-75">
      {title}
    </h1>

    <div class="gap-14 flex flex-row justify-center">
      <p class="text-sm font-bold">
        {descript1}
        <a
          href={link}
          target="_blank"
          title="Visit project website"
        >
          <Plus />
        </a>
      </p>
    </div>

    <p class="text-sm text-left py-8 px-20 text-pretty leading-relaxed">
      {descript2}
    </p>
    <div class="flex flex-col items-center gap-4">
      <Image src={imgSrc} alt="Website screenshot" width={1200} height={500} />
    </div>
  </section>
</MainLayout>
