      <g id="layer1">
        <path
          style="fill:#e11d48;fill-opacity:1;stroke-width:0.264583"
          d="M 60.84582,23.332831 C 75.062992,45.008439 73.994271,43.589286 80.772581,54.578046 L 54.928354,57.878656 69.309985,50.029893 61.015104,40.529625 52.450683,58.104114 40.764107,60.01994 C 46.506706,50.309316 54.589529,34.997848 60.84582,23.332831 Z"
          id="path1"></path>
        <path
          style="fill:#333333;fill-opacity:1;stroke-width:0.264583"
