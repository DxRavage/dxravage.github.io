<style>
  * {
    padding-top: 0;
  }
  #nav-container {
    max-width: 580px;
    padding-right: 10px;
    width: 90%;
    margin: auto;
    top: 0;
    opacity: 0;
  }

  #navbar {
    width: 100%;
    padding-right: 10px;
  }

  #nav-container {
    position: absolute;
    z-index: 4;
    margin: 0;
  }

  #navbar #menu-items {
    display: flex;
  }

  #navbar #nav-container li {
    list-style: none;
  }

  #navbar #nav-container a {
    text-decoration: none;
    font-weight: 500;
    font-size: 1.2rem;
    padding: 0.5rem;
  }

  #navbar #nav-container a:hover {
    font-weight: bolder;
  }

  #nav-container {
    display: block;
    position: relative;
    height: 60px;
    opacity: 1;
  }

  #nav-container #checkbox {
    position: absolute;
    display: block;
    height: 52px;
    width: 42px;
    z-index: 5;
    opacity: 0;
    cursor: pointer;
  }

  #nav-container #hamburger-lines {
    display: block;
    height: 26px;
    width: 32px;
    position: absolute;
    top: 20px;
    left: 20px;
    z-index: 2;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  #nav-container #hamburger-lines #line1 {
    display: block;
    height: 4px;
    width: 100%;
    border-radius: 10px;
    background: #0e2431;
    opacity: 0.9;
  }

  #nav-container #hamburger-lines #line2 {
    display: block;
    height: 4px;
    width: 100%;
    border-radius: 10px;
    background: #0e2431;
    opacity: 0.9;
  }

  #nav-container #hamburger-lines #line3 {
    display: block;
    height: 4px;
    width: 100%;
    border-radius: 10px;
    background: #0e2431;
    opacity: 0.9;
  }
  #nav-container #hamburger-lines #line1 {
    transform-origin: 0% 0%;
    transition: transform 0.4s ease-in-out;
  }

  #nav-container #hamburger-lines #line2 {
    transition: transform 0.2s ease-in-out;
  }

  #nav-container #hamburger-lines #line3 {
    transform-origin: 0% 100%;
    transition: transform 0.4s ease-in-out;
  }

  #navbar #menu-items {
    padding-top: 40px;
    height: 100vh;
    width: 100%;
    transform: translate(-150%);
    display: flex;
    flex-direction: column;
    transition: transform 0.5s ease-in-out;
    z-index: 4;
  }

  #navbar #menu-items li {
    padding: 40px;
    font-size: 1.5rem;
    font-weight: 500;
    display: none;
  }

  #nav-container input[type="checkbox"]:checked ~ #menu-items {
    background-color: rgb(207, 207, 207);
    transform: translateX(0);
  }

  #nav-container input[type="checkbox"]:checked ~ #hamburger-lines #line1 {
    transform: rotate(45deg);
    background: #0e2431;
  }

  #nav-container input[type="checkbox"]:checked ~ #hamburger-lines #line2 {
    transform: scaleY(0);
    background: #0e2431;
  }

  #nav-container input[type="checkbox"]:checked ~ #hamburger-lines #line3 {
    transform: rotate(-45deg);
    background: #0e2431;
  }

  #nav-container input[type="checkbox"]:checked ~ #menu-items li {
    width: 720px;
    display: block;
  }
</style>
