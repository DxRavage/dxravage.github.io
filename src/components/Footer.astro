---
import Linkedin from "../components/Linkedin.astro";
import Github from "../components/Github.astro";
import Mail from "../components/Mail.astro";
import Whatsapp from "../components/Whatsapp.astro";
import Logo from "../components/Logo.astro";
---

<section
  class="w-full border-t-2 border-secondary dark:border-primary"
  style="background: rgb(88,88,88);
    background: linear-gradient(180deg, rgba(88,88,88,0.95) 0%, rgba(0,0,0,0.8953956582633054) 70%);"
  id="contact"
>

  <div
    class="max-w-screen-xl px-4 -mt-0.5 mx-auto space-y-8 overflow-hidden sm:px-6 lg:px-8"
  >
    <section
      class="border-b-2 pt-8 border-zinc flex flex-col justify-center items-center"
    >
      <Logo />
      <p
        class="leading-6 text-pretty text-center text-secondary opacity-70 pb-4"
      >
        Designed by myself, built using <span
          class="hover:text-rose cursor-pointer"
          ><a href="https://astro.build" target="_blank" rel="noopener">Astro</a
          ></span> and
          <span class="hover:text-rose cursor-pointer"
            ><a href="https://tailwindcss.com" target="_blank" rel="noopener"
              >Tailwind CSS</a
            >,
          </span> deployed with <span class="hover:text-rose cursor-pointer"
            ><a href="https://pages.github.com" target="_blank" rel="noopener"
              >GithubPages</a
            ></span
          >.
        </span>
      </p>
    </section>
    <div class="flex justify-center mt-4 p-6 space-x-6">
      <Mail />
      <Github />
      <Linkedin />
      <Whatsapp />
    </div>
  </div>
</section>
