---
const { title, description, imgSrc, BadgeNames } = Astro.props;
import Badge from "../components/Badge.astro";
---

<section
  class="bg-neutral-100 bg-opacity-35 flex flex-wrap md:flex-wrap pb-12 justify-center p-14 items-center"
>
  <div
    class="bg-opacity-20 bg-black md:p-8 flex flex-col"
  >
    <div class="p-8 ">
      <h2 class="text-2xl text-rose font-mechsuit pb-4">{title}</h2>
      <p class="text-sm text-primary pb-4">{description}</p>
      {
        BadgeNames &&
          BadgeNames.map((badgeName, index) => (
            <Badge key={index} title={badgeName} />
          ))
      }
    </div>
    <div class="justify-center">
      <img
        class="w-36"
        src={imgSrc}
        alt="Captura de pantalla que muestra un proyecto"
      />
    </div>
  </div>
</section>
